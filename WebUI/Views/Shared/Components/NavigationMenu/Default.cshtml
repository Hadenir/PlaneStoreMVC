@model NavigationMenuViewModel

<div class="d-grid gap-2">
    <a class="btn btn-outline-secondary"
       asp-controller="Home"
       asp-action="Index">
        Main Page
    </a>
    @foreach (var manufacturer in Model.Manufacturers)
    {
        <a class="btn @(manufacturer.Id == Model.SelectedManufacturer?.Id ? "btn-primary" : "btn-outline-secondary")"
           asp-controller="Home"
           asp-action="Index"
           asp-route-manufacturerId="@manufacturer.Id"
           asp-route-currentPage="1">
            @manufacturer.Name
        </a>
    }
</div>